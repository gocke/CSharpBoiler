<Window x:Class="CSharpBoiler.AuthMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ext="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="AuthMessageBox" Height="120" Width="350" Icon="Ico/Boiler.ico" 
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip">
    <Grid Background="Black">
        <StackPanel>
            <DockPanel>
                <Image Source="Images/BoilerStyl2P4_48x48.png" Height="48" Width="48" />            
                <TextBlock Text="Steam TWO-WAY Authentication" Foreground="White" FontSize="16" Margin="5" VerticalAlignment="Center"/>
            </DockPanel>
            <ext:WatermarkTextBox Watermark="Please enter the authentication code sent to your email" x:Name="ResponseTextBox" Margin="5" />
            <Button Content="OK" Click="OKButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
